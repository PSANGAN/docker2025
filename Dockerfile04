# syntax=docker/dockerfile:1
FROM alpine

WORKDIR /code

# COPY <source> <destination>
# The period character represents the current working directory.
COPY assets/greet .
# Make the file executable.
RUN chmod a+x greet

COPY assets/*.txt /assets/

ADD https://github.com/cloudacademy/python_postgres_web_app/archive/refs/heads/main.zip /code

ADD assets/content.tar.gz /content/